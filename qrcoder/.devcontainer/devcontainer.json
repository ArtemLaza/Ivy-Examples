{
  "name": "QR Code Generator",
  "image": "mcr.microsoft.com/dotnet/sdk:9.0",
  "features": {},
  "postCreateCommand": "dotnet tool install -g Ivy.Console && cd /workspaces/Ivy-Examples/qrcoder && dotnet restore",
  "postStartCommand": "cd /workspaces/Ivy-Examples/qrcoder && dotnet watch run",
  "forwardPorts": [5010],
  "portsAttributes": {
    "5010": {
      "label": "Ivy QR Code Generator",
      "onAutoForward": "openPreview"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "dotnet.defaultSolution": "/workspaces/Ivy-Examples/qrcoder/*.sln",
        "terminal.integrated.shell.linux": "/bin/bash",
        "terminal.integrated.cwd": "/workspaces/Ivy-Examples/qrcoder",
        "files.exclude": {
          "**/../**": true,
          "**/../../**": true,
          "**/../../../**": true,
          "**/../../../../**": true
        },
        "search.exclude": {
          "**/../**": true,
          "**/../../**": true,
          "**/../../../**": true,
          "**/../../../../**": true
        },
        "explorer.excludeGitIgnore": true
      },
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-vscode.powershell",
        "ms-dotnettools.csdevkit"
      ]
    }
  },
  "workspaceFolder": "/workspaces/Ivy-Examples/qrcoder",
  "mounts": [
    "source=${localWorkspaceFolder}/qrcoder,target=/workspaces/Ivy-Examples/qrcoder,type=bind,consistency=cached"
  ]
}
